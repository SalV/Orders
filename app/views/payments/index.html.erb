<h1>Listing payments</h1>

<table>
  <tr>
    <th>Trx</th>
    <th>Trx type</th>
    <th>Amount paid</th>
    <th>Pmt date</th>
    <th>Pmt type</th>
    <th>Pmt doc</th>
    <th>Comments</th>
    <th>Inv adj code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.trx_id %></td>
    <td><%= payment.trx_type %></td>
    <td><%= payment.amount_paid %></td>
    <td><%= payment.pmt_date %></td>
    <td><%= payment.pmt_type %></td>
    <td><%= payment.pmt_doc %></td>
    <td><%= payment.comments %></td>
    <td><%= payment.inv_adj_code %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

